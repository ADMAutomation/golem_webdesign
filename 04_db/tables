CREATE TABLE vocabolari (
	vid INT NOT NULL AUTO_INCREMENT,
	name VARCHAR(50) NOT NULL,
	PRIMARY KEY vid (vid),
	FULLTEXT name (name)
) TYPE = MyISAM COMMENT ='';


CREATE TABLE termini (
	tid INT NOT NULL AUTO_INCREMENT,
	vid INT NOT NULL,
	name VARCHAR(50) NOT NULL,
	PRIMARY KEY tid (tid),
	KEY vid (vid)
) TYPE = MyISAM COMMENT ='';


